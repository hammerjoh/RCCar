<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.hammer.rccar.StartActivity">


    <EditText
        android:id="@+id/va_laenge"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="@string/leange"
        android:inputType="numberDecimal"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btn_berechne"
        android:layout_alignEnd="@+id/btn_berechne" />

    <EditText
        android:id="@+id/va_breite"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="@string/breite"
        android:inputType="numberDecimal"
        android:layout_below="@+id/va_laenge"
        android:layout_alignLeft="@+id/va_laenge"
        android:layout_alignStart="@+id/va_laenge" />


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/va_breite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/btn_berechne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/berechne"
        android:layout_below="@+id/tv_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

</RelativeLayout>
