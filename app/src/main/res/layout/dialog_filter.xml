<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">


    <EditText
        android:id="@+id/editText_Suchdateiname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/editText_Dateiname"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/dp_Suchchassis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:dropDownSelector="@android:color/darker_gray"
        android:popupBackground="?attr/colorBackgroundFloating"
        android:spinnerMode="dropdown"
        android:textAlignment="center" />

</LinearLayout>