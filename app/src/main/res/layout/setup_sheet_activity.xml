<?xml version="1.0" encoding="utf-8"?>
<de.hammer.rccar.ZoomActivity xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/zoom_layout"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:context="de.hammer.rccar.Setup"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/b6_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/b6mid" />

        <EditText
            android:id="@+id/editText_fahrer"
            style="@android:style/Widget.DeviceDefault.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText4"
            android:layout_alignStart="@+id/editText4"
            android:layout_alignTop="@+id/editText4"
            android:background="@drawable/edittext_b6"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Johannes Hammer"
            android:textColor="@android:color/background_dark"
            android:textSize="5dp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="126dp"
            android:layout_marginStart="126dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Johannes Hammer"
            android:textColor="@android:color/background_dark"
            android:textSize="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"  />

    </RelativeLayout>


</de.hammer.rccar.ZoomActivity>